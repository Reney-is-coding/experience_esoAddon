<GuiXml>
    <Controls>
        <TopLevelControl name="Addon" mouseEnabled="true">
            <Dimensions x="200" y="42" />
            <Anchor point="CENTER" />

            <OnUpdate>
                AddonUpdate()
            </OnUpdate>

            <OnMouseDown>
                AddonReset()
            </OnMouseDown>

            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" />
                <Label name="$(parent)Counter" font="ZoFontWindowTitle" color="CFDCBD" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Counter: ">
                    <AnchorFill />
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
